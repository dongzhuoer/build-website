{
    // https://code.visualstudio.com/docs/editor/tasks
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [],
    "presentation": {
        "reveal": "silent",
    },
    "tasks": [
        {
            "label": "build",
            "command": "pandoc ${relativeFile} -s -o index.html",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "test",
            "command": "google-chrome index.html",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
        {
            "label": "view GitHub",
            "command": "google-chrome https://github.com/dongzhuoer/build-website 2> /dev/null",
        },
    ]
}